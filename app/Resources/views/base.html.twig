<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>

    <title>{% block title %}Welcome!{% endblock %}</title>

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    {% block stylesheets %}
        <link href="{{ asset('assets/css/bundled.css') }}" type="text/css" rel="stylesheet"/>
        <link href="{{ asset('assets/css/blog.css') }}" type="text/css" rel="stylesheet"/>
    {% endblock %}
</head>

<body>

<div class="container">

    <div class="col-lg-8 col-md-8 pull-center header">
        <h1 class="pull-left logo">
            <a href="{{ path('AppBundle_homepage') }}">Blogify</a>
        </h1>

        <div class="btn btn-link pull-right">
            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <a href="{{ path('fos_user_security_logout') }}">
                    {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                    {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                </a>
            {% else %}
                <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
            {% endif %}
        </div>

        <div class="clearfix"></div>
    </div>


    {% block body %}{% endblock %}

</div>
<!-- /container -->

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/js/bundled.js') }}"></script>
{% endblock %}
</body>
</html>